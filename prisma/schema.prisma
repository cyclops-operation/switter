generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

enum Role {
  USER
  ADMIN
}

enum Status {
  PENDING
  ACTIVE
}

model User {
  id        Int    @id @default(autoincrement())
  guildName String
  name      String
  status    Status @default(PENDING)
  role      Role   @default(USER)
  posts     Post[]
}

model Post {
  id       Int     @id @default(autoincrement())
  title    String
  content  String?
  author   User    @relation(fields: [authorId], references: [id])
  authorId Int

  @@index([authorId])
}
