generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id            Int            @id @default(autoincrement())
  guildName     String
  name          String
  role          Role           @default(USER)
  status        Status         @default(PENDING)
  naverKey      String
  feeds         Feed[]
  comments      Comment[]
  alarms        Alarm[]
  notifications Notification[]
}

model Feed {
  id          Int      @id @default(autoincrement())
  keyword     String?
  monsterList Json
  createdAt   DateTime @default(now())
  viewCount   Int      @default(0)

  author   User @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId Int

  comments Comment[]

  @@index([authorId])
}

model Comment {
  id          String   @id @default(cuid())
  keyword     String?
  monsterList Json
  createdAt   DateTime @default(now())

  author   User @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId Int

  feed   Feed @relation(fields: [feedId], references: [id], onDelete: Cascade)
  feedId Int

  @@index([feedId])
  @@index([authorId])
}

model Monster {
  id          Int          @id @default(autoincrement())
  originName  String
  monsterName String?      @default("")
  elementType ElementType?
  keyword     Json
}

model Notification {
  id          Int               @id @default(autoincrement())
  type        NotificationEvent @default(Private)
  title       String?
  description String?
  createdAt   DateTime          @default(now())
  isRead      Boolean           @default(false)
  count       Int               @default(1)
  sender      User              @relation(fields: [senderId], references: [id])
  senderId    Int

  @@index([senderId])
}

model Alarm {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  url         String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
  isRead      Boolean  @default(false)
  receiverId  Int
  count       Int?     @default(1)
  eventType   String?
  receiver    User     @relation(fields: [receiverId], references: [id])

  @@index([receiverId])
}

enum NotificationEvent {
  Public
  Private
  Admin
}

enum Role {
  USER
  ADMIN
}

enum Status {
  PENDING
  ACTIVE
}

enum ElementType {
  fire
  water
  wind
  light
  dark
}
