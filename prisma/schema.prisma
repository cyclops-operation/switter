generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  token     String
  guildName String
  nickname  String
  role      Role      @default(USER)
  status    Status    @default(PENDING)
  feeds     Feed[]
  comments  Comment[]
}

model Feed {
  id          Int      @id @default(autoincrement())
  keyword     String?
  monsterList Json
  createdAt   DateTime @default(now())
  viewCount   Int      @default(0)

  author   User @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId Int

  comments Comment[]

  @@index([authorId])
}

model Comment {
  id          String   @id @default(cuid())
  keyword     String?
  monsterList Json
  createdAt   DateTime @default(now())

  author   User @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId Int

  feed   Feed @relation(fields: [feedId], references: [id], onDelete: Cascade)
  feedId Int

  @@index([feedId])
  @@index([authorId])
}

model Monster {
  id          Int          @id @default(autoincrement())
  originName  String
  monsterName String?      @default("")
  elementType ElementType?
  keyword     Json
}

enum Role {
  USER
  ADMIN
}

enum Status {
  PENDING
  ACTIVE
}

enum ElementType {
  fire
  water
  wind
  light
  dark
}
